<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ic_launcher_background"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row4"
        >
        <ImageButton
            android:id="@+id/back"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_baseline_backspace_24"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />
        <Button
            android:id="@+id/clear"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:padding="5dp"
            android:text="C"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#FF9130"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />
        <Button
            android:id="@+id/open"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:layout_marginEnd="10dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="("
            android:visibility="gone"
            android:padding="5dp"
            android:backgroundTint="#FF9130"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/close"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:layout_marginEnd="10dp"
            android:shadowDx="0"
            android:padding="5dp"
            android:visibility="gone"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text=")"
            android:backgroundTint="#FF9130"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />
        <Button
            android:id="@+id/divide"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:layout_marginEnd="10dp"
            android:shadowDy="0"
            android:padding="5dp"
            android:shadowRadius="5"
            android:text="รท"
            android:backgroundTint="#FF9130"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row3"
        android:padding="10dp">
        <Button
            android:id="@+id/seven"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:padding="5dp"
            android:text="7"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#FF9130"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />
        <Button
            android:id="@+id/eight"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:layout_marginEnd="10dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="8"
            android:padding="5dp"
            android:backgroundTint="#FF9130"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />
        <Button
            android:id="@+id/nine"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:layout_marginEnd="10dp"
            android:shadowDx="0"
            android:padding="5dp"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="9"
            android:backgroundTint="#FF9130"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />
        <Button
            android:id="@+id/into"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:layout_marginEnd="10dp"
            android:shadowDy="0"
            android:padding="5dp"
            android:shadowRadius="5"
            android:text="x"
            android:backgroundTint="#FF9130"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row2"
        android:padding="10dp">
        <Button
            android:id="@+id/four"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:layout_marginEnd="10dp"
            android:shadowRadius="5"
            android:padding="5dp"
            android:text="4"
            android:backgroundTint="#FF9130"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />
        <Button
            android:id="@+id/five"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:layout_marginEnd="10dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:padding="5dp"
            android:shadowRadius="5"
            android:text="5"
            android:backgroundTint="#FF9130"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />
        <Button
            android:id="@+id/six"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:layout_marginEnd="10dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="6"
            android:padding="5dp"
            android:backgroundTint="#FF9130"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />
        <Button
            android:id="@+id/minus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:layout_marginEnd="10dp"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="-"
            android:padding="5dp"
            android:backgroundTint="#FF9130"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row1"
        android:padding="10dp">
        <Button
            android:id="@+id/one"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:padding="5dp"
            android:text="1"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#FF9130"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />
        <Button
            android:id="@+id/two"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:layout_marginEnd="10dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="2"
            android:padding="5dp"
            android:backgroundTint="#FF9130"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />
        <Button
            android:id="@+id/three"
            android:layout_width="80dp"
